<!DOCTYPE html>
<html lang="en">
<%-include('./partials/header.ejs')%>

<body>
  <%-include('./partials/nav.ejs') %>
  <div class="container my-5">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
          <div class="create-blog">
            <form id="blog-form" class="form" action="blogs" method="post">
              <h3 class="text-center text-info">Blog</h3>
              <div class="form-group">
                <label for="title" class="text-info">Company Name:</label><br>
                <input type="text" name="title" id="title" class="form-control" required>
              </div>
              <label for="snipped">Interviewed for :</label>
              <select name="snipped" id="snipped" required>
                <option selected>select</option>
                <option value="Internship">Intership</option>
                <option value="Placement">Placement</option>
              </select>
              <div class="form-group">
                <label for="Body" class="text-info">Your Experience:</label><br>
                <textarea type="text" name="body" id="Body" class="form-control" required></textarea>
              </div>
              <div class="form-group my-4">
                <input type="submit" name="submit" class="btn btn-info btn-md" value="Submit">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>

</html>